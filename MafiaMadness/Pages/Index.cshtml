@page

<div class="container">

    <!-- Modal -->
    <div class="modal in" id="nameModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Enter Your Name</h4>
                </div>
                <div class="modal-body">
                    <p>What should you be known as?</p>
                    <input type="text" class="form-control input-lg" id ="inputNameField" name="username">
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default" data-dismiss="modal" id="inputNameButton">Enter Chat Room</button>
                </div>
            </div>

        </div>
    </div>

    <div class="col-sm-6">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">&nbsp;</div>
            <div class="col-6">
                <!--User..........<input type="text" id="userInput" />
                <br /> -->
                Message...<input type="text" id="messageInput" />
                <input type="button" id="sendButton" value="Send Message" />
                <input type="button" id="drawButtonStart" value="Start Drawing!" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-6">&nbsp;</div>
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="row">&nbsp;</div>
        <canvas id="mainCanvas"
                width="500"
                height="500"
                style="border:1px solid #000000;"></canvas>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<!--<script src="~/js/chat.js"></script> -->


<script src="~/js/Globals.js"></script>
<script src="~/js/SenderChat.js"></script>
<script src="~/js/ReceiverChat.js"></script>  

<script src="~/lib/fabric.js/fabric.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
